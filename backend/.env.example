# DB connection (Postgres + PostGIS)
DATABASE_URL=postgres://postgres:postgres@db:5432/taxytac?sslmode=disable

# Redis
REDIS_URL=redis:6379

# JWT
JWT_SECRET=replace_this_with_strong_secret_in_production

# MQTT / broker (EMQX)
MQTT_BROKER_URL=emqx:1883
MQTT_WS_URL=ws://emqx:8083/mqtt

# Map service (Mapbox token if used)
MAPBOX_TOKEN=your_mapbox_token_here

# Server
PORT=8080
GIN_MODE=release

# Log level (debug, info, warn, error)
LOG_LEVEL=info
